<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Update Employee</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header text-center bg-primary text-white">
                        <h4>Update Employee</h4>
                    </div>

                    <div class="card-body">
                        <form method="post" action="/updateEmp" enctype="multipart/form-data">

                            <input type="hidden" name="emp_id" value="<%= singleEmp._id %>">

                            <div class="mb-3">
                                <label class="form-label">Employee Name</label>
                                <input type="text" name="Employee_name" value="<%= singleEmp.Employee_name %>"
                                    class="form-control">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input type="email" name="email" value="<%= singleEmp.email %>" class="form-control">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Password</label>
                                <input type="password" name="password" value="<%= singleEmp.password %>"
                                    class="form-control">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Phone</label>
                                <input type="tel" name="phone" value="<%= singleEmp.phone %>" class="form-control">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Gender</label><br>
                                <input type="radio" name="gender" value="Male" <% if (singleEmp.gender==='Male' ) { %>
                                checked <% } %>> Male
                                    <input type="radio" name="gender" value="Female" <% if (singleEmp.gender==='Female'
                                        ) { %> checked <% } %>> Female
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Hobby</label><br>
                                <% ["Reading","Music","basketball","atletics","Other"].forEach(hobby=> { %>
                                    <input type="checkbox" name="hobby" value="<%= hobby %>" <% if
                                        (singleEmp.hobby.includes(hobby)) { %> checked <% } %>>
                                        <%= hobby %>
                                            <% }) %>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Salary</label>
                                <input type="number" name="salary" value="<%= singleEmp.salary %>" class="form-control">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Department</label>
                                <select name="Department" class="form-select">
                                    <% ["HR","MANAGER","SALES","EMPLOYEE"].forEach(dep=> { %>
                                        <option value="<%= dep %>" <% if (singleEmp.Department===dep) { %> selected <% }
                                                %>>
                                                <%= dep %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                            <!-- Profile Image -->
                            <div class="form-group row">
                                <label class="col-sm-3 text-right control-label col-form-label">Profile
                                    Image</label>
                                <div class="col-md-9">
                                    <div>
                                        <img src="/<%= singleEmp.profile_image %>" height="50" width="50">
                                    </div>
                                    <div class="mt-2 custom-file">
                                        <input type="file" name="profile_image">
                                    </div>
                                </div>
                            </div>
                    </div>

                    <button type="submit" class="btn btn-warning w-100">
                        Update
                    </button>

                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
</body>

</html>