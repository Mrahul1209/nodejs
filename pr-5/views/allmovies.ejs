<!DOCTYPE html>
<html>

<head>
    <title>All Movies</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="/css/style.css" rel="stylesheet">

</head>

<body>
    <!-- Cinema Header -->
    <div class="cinema-header">
        <div class="header-content text-center">
            <h1 class="header-title">üé¨ Movie Collection</h1>
            <p class="header-subtitle">
                Your personal cinematic universe. Explore, manage, and enjoy your favorite films in one place.
            </p>
            <a href="/" class="btn-add-movie">
                <i class="fas fa-plus-circle"></i> Add New Movie
            </a>
        </div>
    </div>


    <!-- Movie Grid -->
    <div class="container movie-grid">
        <div class="row">
            <% movies.forEach(movie=> { %>
                <div class="my-3 col-lg-3 col-md-4 col-sm-6">
                    <div class="movie-card">
                        <div class="movie-poster-container">
                            <img src="/<%= movie.poster_image %>" class="movie-poster" alt="<%= movie.title %>">
                            <div class="movie-rating-badge">
                                <i class="fas fa-star me-1"></i>
                                <%= movie.rating %>
                            </div>
                        </div>

                        <div class="movie-content">
                            <h5 class="movie-title">
                                <%= movie.title %>
                            </h5>
                            <div class="movie-director">
                                <i class="fas fa-user-tie"></i>
                                <%= movie.director %>
                            </div>

                            <div class="movie-meta">
                                <span class="movie-genre">
                                    <%= movie.genre %>
                                </span>
                                <span class="movie-language">
                                    <%= movie.language %>
                                </span>
                            </div>

                            <p class="movie-description">
                                <%= movie.description %>
                            </p>

                            <div class="movie-details">
                                <div>
                                    <div><i class="fas fa-calendar me-1"></i>
                                        <%= movie.release_year %>
                                    </div>
                                    <div><i class="fas fa-clock me-1 my-2"></i>
                                        <%= movie.duration %> min
                                    </div>
                                </div>
                            </div>

                            <div class="movie-actions">
                                <a href="/editMovie/<%= movie._id %>" class="btn-edit">
                                    <i class="fas fa-edit me-1"></i> Edit
                                </a>
                                <a href="/deleteMovie?id=<%= movie.id %>" class="btn-delete">
                                    <i class="fas fa-trash me-1"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>

        <!-- If no movies -->
        <% if(movies.length===0) { %>
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fas fa-film"></i>
                </div>
                <h3 class="mb-3" style="color: var(--accent-yellow);">No Movies Yet</h3>
                <p class="mb-4" style="color: var(--gray-text); max-width: 500px; margin: 0 auto;">
                    Your movie collection is empty. Start by adding your first movie to build your cinematic library.
                </p>
                <a href="/" class="btn-add-movie" style="max-width: 250px;">
                    <i class="fas fa-plus-circle"></i> Add First Movie
                </a>
            </div>
            <% } %>
    </div>

    <!-- Footer -->
    <footer class="cinema-footer">
        <div class="container">
            <div class="row gy-4">

                <!-- Brand -->
                <div class="col-md-4 text-center text-md-start">
                    <h4 class="footer-title">üé¨ Movie Collection</h4>
                    <p class="footer-text">
                        Your personal cinematic universe. Store, explore and manage your favorite movies.
                    </p>
                </div>

                <!-- Links -->
                <div class="col-md-4 text-center">
                    <h5 class="footer-heading">Quick Links</h5>
                    <ul class="footer-links">
                        <li><a href="/">Add Movie</a></li>
                        <li><a href="/allmovies">All Movies</a></li>
                    </ul>
                </div>

                <!-- Social -->
                <div class="col-md-4 text-center text-md-end">
                    <h5 class="footer-heading">Follow Us</h5>
                    <div class="footer-social">
                        <a href="#"><i class="fab fa-github"></i></a>
                        <a href="#"><i class="fab fa-linkedin"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>

            </div>

            <hr class="footer-divider">

            <div class="footer-bottom text-center">
                ¬© 2026 Movie Collection | Built with ‚ù§Ô∏è
            </div>
        </div>
    </footer>

</body>

</html>